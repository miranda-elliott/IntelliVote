<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foreground="?attr/selectableItemBackground"
    card_view:contentPadding="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="2sp"
    card_view:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Issue Icon -->
        <ImageView
            android:id="@+id/issue_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <!-- Issue Name -->
        <TextView
            android:id="@+id/issue_name"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textAppearance="@android:style/TextAppearance.Holo.SearchResult.Title"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/issue_icon"/>
        <!-- Issue Description -->
        <TextView
            android:id="@+id/issue_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_below="@id/issue_name"
            android:layout_toEndOf="@id/issue_icon"/>
        <!-- Issue Match -->
        <TextView
            android:id="@+id/issue_match"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/candidate_name"
            android:textAppearance="@android:style/TextAppearance.Holo.SearchResult.Subtitle"
            android:padding="20dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>